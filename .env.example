# Leader wallets to follow (comma-separated)
LEADER_ADDRESSES=0x1234567890abcdef1234567890abcdef12345678,0xabcdef1234567890abcdef1234567890abcdef12

# Follower wallet private key (KEEP SECRET!)
FOLLOWER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Copy ratio (0.0 - 1.0, default 0.2 = 20% of leader position)
RATIO_DEFAULT=0.2

# Max notional per single order (USD)
NOTIONAL_CAP_PER_ORDER_USD=200

# Max leverage allowed per position
MAX_LEVERAGE=5

# Max total notional across all positions (USD)
MAX_TOTAL_NOTIONAL_USD=2000

# Cooldown between executions for same coin (ms)
COOLDOWN_MS_PER_COIN=2000

# Polling interval for position updates (ms)
POLL_INTERVAL_MS=1500

# Telegram bot configuration
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER
TELEGRAM_ALLOWED_CHAT_IDS=123456789,987654321

# Mode: "paper" (simulation) or "live" (real trading)
MODE=paper

# Time In Force: "IOC" (Immediate Or Cancel) or "GTC" (Good Till Cancel)
TIF_DEFAULT=IOC

# If true, only log orders without executing (even in live mode)
DRY_RUN_LOG_ONLY=false

# State persistence file
STATE_FILE=state.json
